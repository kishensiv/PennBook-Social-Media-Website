        <i class="glyphicon glyphicon-off icon-blue"></i><span>  Sign Out</span>
      </a>
    </li>
    </ul> 
    
    
    <h1>Search for News</h1>
    <div id="search-form"  style="width: 468px; border-radius: 5px; height: 80%; align-self: center; margin: 0 auto;">
      <label for="search-text">Search</label>
      <input type="text" class="form-control" id="search-text" placeholder="Search for news">
      </div>
    <div id="suggestions" style="width: 468px; border-radius: 5px; height: 80%; align-self: center; margin: 0 auto;">
        <h3>Search Suggestions</h3>
        <ul id="news-list">
        </ul>
    </div>
  
  
  </body>
  <script>
    function refresh() {
      suggest();
      setTimeout(refresh, 1000);
    }

    var prev = "";
    function suggest() {
      const text = document.getElementById("search-text").value;
      if (text != "" && prev !== text) {
        prev = text;
        const data = {
          text: text
        };
        var str = "";
        $.post("/newssearchscan", data, function(x) {
          x.data.forEach(function(item) {
            str += "<li>" + '<h3><a href="' + item.url + '">' + item.headline + "</a></h3></li>";
          });
          $("#news-list").html(str);
        });
      }
    }

    $(document).ready(function() {
      $("#wall-nav-bar").attr("href", "/wall?username=<%= username %>");
      refresh();
    });
  </script>
</html>